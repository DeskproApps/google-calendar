{
  "name": "@deskpro-apps/google-calendar",
  "title": "Google Calendar",
  "description": "View, create, and schedule future events with your users.",
  "version": "0.0.4",
  "scope": "agent",
  "hasDevMode": true,
  "isSingleInstall": false,
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "settings": {
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback" },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 30
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://www.googleapis.com/calendar/v3/.*",
        "methods": ["GET", "POST"],
        "timeout": 20
      },
      {
        "url": "https://oauth2.googleapis.com/.*",
        "methods": ["GET", "POST"],
        "timeout": 20
      }
    ]
  }
}
